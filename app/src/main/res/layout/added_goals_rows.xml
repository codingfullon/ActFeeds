<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/iconImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:background="@drawable/circle"
        android:foregroundGravity="center_horizontal"
        android:scaleType="centerInside"
        android:textColor="@color/colorPrimary"
        android:tint="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <CheckBox
        android:id="@+id/cbDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:buttonTint="@android:color/holo_green_dark"
        android:gravity="right"
        android:paddingLeft="1dp"
        android:textColor="@color/colorPrimary"
        app:layout_constraintRight_toLeftOf="@+id/ivGroup"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_weight="0.01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_add_black_24dp" />

    <TextView
        android:id="@+id/name_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.86"
        android:fontFamily="sans-serif"
        android:gravity="left"
        android:text="@string/default_activity_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textDirection="ltr"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/iconImageView"
        app:layout_constraintRight_toLeftOf="@+id/cbDone"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvActivityTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:text="Time"
        app:layout_constraintLeft_toRightOf="@+id/iconImageView"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view" />

    <TextView
        android:id="@+id/tvActivityDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="2dp"
        android:text="Duration"
        app:layout_constraintLeft_toRightOf="@+id/tvActivityTime"
        app:layout_constraintTop_toBottomOf="@+id/name_text_view" />

</android.support.constraint.ConstraintLayout>