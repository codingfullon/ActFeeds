<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HabitsReport">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/my_activities_progress"
        android:textSize="15sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

  <!--  <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="9dp"
        android:background="@color/colorAccent" /> -->


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvActivityPercentage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewEmpty3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:paddingTop="80dp"
        android:text="@string/empty_actvity_count"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/materialOrange"
        android:textSize="20sp"
        android:visibility="visible" />

</LinearLayout>
