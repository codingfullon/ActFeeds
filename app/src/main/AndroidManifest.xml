<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapp.actfeeds">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" /> <!--TODO is working fine without this permission-->


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.myapp.actfeeds.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.myapp.actfeeds.ContactUS"
            android:parentActivityName="com.example.myapp.actfeeds.MainActivity"
            />

        <activity
            android:name="com.example.myapp.actfeeds.GoalDetails"
            android:label="@string/add_activity"
            android:parentActivityName="com.example.myapp.actfeeds.MainActivity" />

        <service
            android:name="com.example.myapp.actfeeds.fcm.ActFeedsFirebaseInstanceIDService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>

        <!-- This is required for immediate syncs -->
        <service
            android:name="com.example.myapp.actfeeds.reminder.ActivityReminderIntentService"
            android:exported="false" />

        <activity
            android:name="com.example.myapp.actfeeds.EditActivity"
            android:label="@string/title_edit_activity"
            android:parentActivityName="com.example.myapp.actfeeds.MainActivity" />




        <activity
            android:name="com.example.myapp.actfeeds.OnboardingActivity"
            android:label="@string/title_activity_onboarding"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="com.example.myapp.actfeeds.AppTour"
            android:label="@string/title_app_tour"
            android:parentActivityName="com.example.myapp.actfeeds.MainActivity"/>
    </application>

</manifest>